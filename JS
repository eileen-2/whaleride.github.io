// 사용자의 요청을 받아 GPT AI에 전달하고, 그 응답을 처리하는 함수
function requestGptAi(userInput) {
    // GPT AI의 API URL
    var apiUrl = 'https://api.openai.com/v1/engines/davinci-codex/completions';

    // API 요청에 사용할 설정
    var requestOptions = {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'Authorization': 'Bearer YOUR_API_KEY' // 여기에 실제 API 키를 입력하세요
        },
        body: JSON.stringify({
            prompt: userInput, // 사용자의 입력을 프롬프트로 사용
            max_tokens: 100 // 응답의 최대 토큰 수
        })
    };

    // API 요청을 보내고 응답을 처리
    fetch(apiUrl, requestOptions)
        .then(response => response.json())
        .then(data => {
            // GPT AI의 응답을 처리하는 코드를 여기에 작성하세요.
            // 예를 들어, 응답을 웹 페이지에 출력하려면 다음과 같이 할 수 있습니다:
            document.getElementById('schedule-page').innerHTML += '<p>' + data.choices[0].text + '</p>';
        })
        .catch(error => console.error('Error:', error));
}

// 사용자가 'Submit' 버튼을 클릭하면 위의 함수를 호출
document.getElementById('submit-button').addEventListener('click', function() {
    var userInput = document.getElementById('user-input').value; // 사용자의 입력을 가져옴
    requestGptAi(userInput);
});
